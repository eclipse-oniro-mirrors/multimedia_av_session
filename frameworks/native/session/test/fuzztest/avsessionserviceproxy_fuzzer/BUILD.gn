#####################hydra-fuzz###################
import("//build/config/features.gni")
import("//build/test.gni")
import("../../../../../../bluetooth_part.gni")
import("../../../../../../castplus_cast_engine_part.gni")
module_output_path = "av_session/av_session"

##############################fuzztest##########################################
ohos_fuzztest("AvSessionServiceProxyFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file = "../avsessionserviceproxy_fuzzer"

  include_dirs = [ "../" ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-fno-access-control",
  ]
  sources = [ "avsessionserviceproxy_fuzzer.cpp" ]
  deps = [ "../../../../session:avsession_client" ]
  external_deps = [
    "ability_base:want",
    "ability_runtime:wantagent_innerkits",
    "audio_framework:audio_client",
    "c_utils:utils",
    "hilog:libhilog",
    "image_framework:image_native",
    "input:libmmi-client",
    "ipc:ipc_single",
    "samgr:samgr_proxy",
  ]

  if (castplus_cast_engine_enable) {
    cflags += [ "-DCASTPLUS_CAST_ENGINE_ENABLE" ]
    deps += [ "../../../../../../services/session:avsession_cast_item_static" ]
  }

  if (bluetooth_part_enable) {
    cflags += [ "-DBLUETOOTH_ENABLE" ]
    external_deps += [ "bluetooth:btframework" ]
  }
}
