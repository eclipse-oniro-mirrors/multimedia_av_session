import("//build/test.gni")
import("../../../../../config.gni")

module_output_path = "multimedia_av_session/ndk"

common_deps = [
  "../../../ohavsession:ohavsession",
  "../../../session:avsession_client",
]

common_external_deps = [
  "ability_base:want",
  "ability_runtime:wantagent_innerkits",
  "audio_framework:audio_client",
  "c_utils:utils",
  "googletest:gtest",
  "hilog:libhilog",
  "image_framework:image_native",
  "input:libmmi-client",
  "ipc:ipc_single",
  "samgr:samgr_proxy",
]

ohos_unittest("OHAVMetadataBuilderTest") {
  install_enable = true
  visibility = [ ":*" ]

  sanitize = {
    cfi = true
    cfi_cross_dso = true
    cfi_vcall_icall_only = true
    debug = false
  }

  include_dirs = [
    "../../../../../interfaces/inner_api/native/session/include",
    "../../../../../interfaces/kits/c",
    "../../include",
  ]

  cflags = [
    "-Wall",
    "-Werror",
  ]

  sources = [ "./oh_av_metadata_builder_test.cpp" ]

  deps = common_deps

  external_deps = common_external_deps

  module_out_path = module_output_path
}

